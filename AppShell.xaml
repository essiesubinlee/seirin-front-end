<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="seirin1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:seirin1"
    xmlns:pages="clr-namespace:seirin1.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="seirin1">

   
    <TabBar>
        <ShellContent Title="Home" ContentTemplate="{DataTemplate pages:MainPage}" Route="MainPage" />
        <ShellContent Title="Data Table" ContentTemplate="{DataTemplate pages:DataTable}" Route="DataTable"/>
        <ShellContent Title="Page2" ContentTemplate="{DataTemplate pages:NewPage2}" Route="NewPage2"/>
        <ShellContent Title="Page3" ContentTemplate="{DataTemplate pages:AboutPage}" Route="AboutPage"/>
    </TabBar>
    

</Shell>
